#!/bin/bash

# global settings
yabai -m config mouse_follows_focus          on
yabai -m config focus_follows_mouse          off
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_shadow                float
yabai -m config window_border                on
yabai -m config window_border_width          2
yabai -m config active_window_border_color   0x64FFFFFF
yabai -m config insert_window_border_color   0x00000000
yabai -m config normal_window_border_color   0x00FFFFFF
yabai -m config window_border_radius         1
yabai -m config active_window_opacity        1.00
yabai -m config normal_window_opacity        1.00
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 on
yabai -m config mouse_modifier               ctrl
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  20
yabai -m config bottom_padding               20
yabai -m config left_padding                 20
yabai -m config right_padding                20
yabai -m config window_gap                   15

yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Airmail$" manage=off
yabai -m rule --add app="^Xcode$" manage=off
yabai -m rule --add app="^Transmission$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Messages$" manage=off
yabai -m rule --add app="^Music$" manage=off
yabai -m rule --add app="^Handbrake$" manage=off
yabai -m rule --add app="^Paw$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
